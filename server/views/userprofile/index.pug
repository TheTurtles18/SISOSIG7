extends ../layout
block head
    title  
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js')
    
    link(rel='stylesheet', href='/stylesheets/style.css')
    
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')

block content
  h2.page-header  User Page 
    div(div ng-app="myApp" ng-controller="myCtrl")
        div(id="miniHeader")
            ul
                li(ng-bind="username")
                li Upload An Image
                li Recent #{name}
        h4(ng-bind="firstname") 
        h4(ng-bind="lastname")
        h4(ng-bind="email")

       
            

    
    script.
      var app = angular.module('myApp', []);
      app.controller('myCtrl', function($scope, $http) {
        $http({
          method : "GET",
          url : './u/'
        })
        .then(function(response) {
          $scope.firstname = response.data.First;
          $scope.lastname = response.data.Last;  
          $scope.username = response.data.Username;  
          $scope.email = response.data.Email;  
        console.log(response.data)


        
         });  
      });